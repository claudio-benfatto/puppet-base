---
classes:
  -  foodity-common
  -  foodity-puppet
  -  ssh

###########################################################################################################
################################### SSH CONFIGURATION #####################################################
###########################################################################################################
  
ssh::server_options:
  PasswordAuthentication: 'yes'
  AllowTcpForwarding: 'no'
  X11Forwarding: 'no'
  PermitRootLogin: 'yes'
  Port: '22'

ssh::foodity-knownhosts::username: 'root'
ssh::foodity-knownhosts::server_list:
  - github.com
  - git.foodity.com
foodity-knownhosts::require: 'Class[::ssh]'

ssh_git_remote: 'git@git.foodity.com:claudio.benfatto/puppet-automation.git'

######################################### HOST SSH KEYS ####################################################

host_ssh_keys:
  id_rsa:
     public_key_content: ''
     private_key_content: ENC[PKCS7,]

###################################### AUTHORIZED USERS PUBLIC KEYS ######################################

ssh_authorized_keys:
  'claudio.benfatto_ssh_key':
    ensure: present
    key: ''
    user: 'ubuntu'
    type: 'ssh-rsa'


