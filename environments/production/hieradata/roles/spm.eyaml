---

classes:
  - ssh
  - docker

docker::version: '0.9.1'

ssh::client_options:
  Host *.github.com:
    ForwardAgent: 'yes'

rvm_gems:
  'ruby-1.9.3-p547/capistrano':
    ensure: '3.2.1'
    require: [ 'Rvm_system_ruby[ruby-1.9.3-p547]' ]

common_users:
  spm:
    comment: 'SPM user'
    groups: admin
    manageruby: true
    uid: 90020
    public_key: ENC[PKCS7,]
    private_key: ENC[PKCS7,] 
    ssh_auth_keys:
      claudio-as-spm:
         type: 'ssh-rsa'
         key: ''
      zaid-as-spm:
         type: 'ssh-rsa'
         key: ''
      glen-as-spm:
         type: 'ssh-rsa'
         key: ''


sudo::configs:
  'spm':
    'content'   : "spm ALL=(root) NOPASSWD:ALL"
    'priority'  : 10
