---
classes:
  -  foodity-common
  -  foodity-puppet
  -  foodity-timkayaws

###########################################################################################################
###################################### AMAZON CONFIGURATION ###############################################
###########################################################################################################

aws_region: 'eu-west-1'

aws_access_key_id: ENC[PKCS7,]

aws_secret_access_key: ENC[PKCS7,]

aws_files:
  '/home/ubuntu/.awssecret':
    owner: 'ubuntu'
    group: 'ubuntu'
    mode: '400'
    ensure: file
    content: ENC[PKCS7,]

  '/home/ubuntu/.awsrc':
    owner: 'ubuntu'
    group: 'ubuntu'
    mode: '400'
    ensure: file
    content: |
        --insecure-aws
        --region=eu-west-1

  '/usr/bin/':
    owner: 'root'
    ensure: 'directory'
    group: 'root'
    mode:  '755'
    recurse: true
    source: 'puppet:///modules/foodity-timkayaws/aws'


software:
  pv:
    ensure: 'latest'
  git:
   ensure: 'latest'
  python-pip: 
    ensure: 'latest'
  build-essential: 
    ensure: 'latest'
  checkinstall: 
    ensure: 'latest'
  lynx:
    ensure: 'latest'
  nmap:
    ensure: 'latest'
  dselect:
    ensure: 'latest'
  tree:
    ensure: 'latest'
  expect:
    ensure: 'latest'
  ruby1.9.1-dev:
    ensure: 'latest'

